h1 Posts
p Hello! These are my blog posts!

div(ng-repeat="post in $ctrl.posts")
    h2 {{post.title}}
    p {{post.body}}
    div.tags
        span(ng-repeat="tag in post.tags") {{tag}}

form(ng-submit="$ctrl.saveNewPost()")
    h3 New Post
    div
        label Title
        input(type="text" name="title" ng-model="$ctrl.newPost.title")
    div
        label Body
        textarea(name="body" ng-model="$ctrl.newPost.body")
    div
        input(type="submit" value="New Post")
